@model VisitorLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Visitors" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="visitorUserName"></label>
                <input asp-for="visitorUserName" class="form-control" />
                <span asp-validation-for="visitorUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorPassword"></label>
                <input asp-for="visitorPassword" class="form-control" />
                <span asp-validation-for="visitorPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-default" type="submit">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}