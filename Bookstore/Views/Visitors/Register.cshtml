@model VisitorRegistrationViewModel

@{
    ViewBag.Title = "Regisztráció";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Visitors" asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="visitorUserName"></label>
                <input asp-for="visitorUserName" class="form-control" />
                <span asp-validation-for="visitorUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorName"></label>
                <input asp-for="visitorName" class="form-control" />
                <span asp-validation-for="visitorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorPhoneNumber"></label>
                <input asp-for="visitorPhoneNumber" class="form-control" />
                <span asp-validation-for="visitorPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorAddress"></label>
                <input asp-for="visitorAddress" class="form-control" />
                <span asp-validation-for="visitorAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorPassword"></label>
                <input asp-for="visitorPassword" class="form-control" />
                <span asp-validation-for="visitorPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visitorConfirmationPassword"></label>
                <input asp-for="visitorConfirmationPassword" class="form-control" />
                <span asp-validation-for="visitorConfirmationPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-default" type="submit">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
