@using Microsoft.AspNetCore.Identity
@using Bookstore.Persistence.Models

@inject SignInManager<BaseUser> SignInManager
@inject UserManager<BaseUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Visitors" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
            <li><a asp-area="" asp-controller="Visitors" asp-action="CreateLending">Book a lending</a></li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Visitors" asp-action="Register">Registration</a></li>
    <li><a asp-area="" asp-controller="Visitors" asp-action="Login">Log in</a></li>
</ul>
}
